{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
		"project": "./tsconfig.json",
		"sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "react-hooks",
		"jest",
		"prettier"
  ],
  "extends": [
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "react/prop-types": "off"
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  }
}