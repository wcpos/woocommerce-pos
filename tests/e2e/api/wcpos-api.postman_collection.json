				{
					"name": "Create Order",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Status code is 201', function() {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test('Order was created via POS', function() {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.created_via).to.equal('woocommerce-pos');",
									"});",
									"",
									"pm.test('Order has line items', function() {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.line_items).to.be.an('array');",
									"    pm.expect(jsonData.line_items.length).to.be.at.least(1);",
									"});",
									"",
									"pm.test('Store order ID for later tests', function() {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set('test_order_id', jsonData.id);",
									"});"
								],
								"type": "text/javascript"
							}
						}
